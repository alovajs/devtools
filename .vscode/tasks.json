// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "extension:dev",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/packages/vscode-extension"
      },
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Build start",
            "endsPattern": "(B|Reb)uild complete"
          }
        }
      ],
      "group": "build"
    }
  ]
}
