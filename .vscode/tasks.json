// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "type": "npm",
      "script": "watch:esbuild",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/packages/vscode-extension"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    }
  ]
}
