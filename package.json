{
  "name": "alova-devtools",
  "displayName": "Alova",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.13.0",
  "description": "devtool kits for alova.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alovajs/devtools.git"
  },
  "bugs": {
    "url": "https://github.com/alovajs/devtools/issues"
  },
  "engines": {
    "node": ">=18.19.0",
    "pnpm": ">=9.1.0"
  },
  "scripts": {
    "test": "run-s test:*",
    "test:e2e": "nr --filter=./packages/* test",
    "test:unit": "vitest run --exclude '**/e2e/**'",
    "test:unit:coverage": "vitest run --coverage",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "api-test": "tsx scripts/api-test.ts",
    "commit": "tsx scripts/bump-version.ts && git-cz && git push",
    "prepare": "husky",
    "coveralls": "nr run test:coverage && coveralls < coverage/lcov.info",
    "changeset": "changeset",
    "changeset:alpha": "changeset pre enter alpha",
    "changeset:beta": "changeset pre enter beta",
    "changeset:pre.exit": "changeset pre exit",
    "changeset:version": "changeset version",
    "build": "nr --filter=./packages/* build",
    "release": "nr coveralls && nr build && changeset publish && nr --filter=alova-vscode-extension release"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "globals": "^16.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@antfu/ni": "^25.0.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.7",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^0.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.4",
    "ncp": "^2.0.0",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.0.1",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*": "npm run lint:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
