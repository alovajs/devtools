{
  "name": "alova-devtools",
  "displayName": "Alova",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "description": "devtool kits for alova.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alovajs/devtools.git"
  },
  "bugs": {
    "url": "https://github.com/alovajs/devtools/issues"
  },
  "engines": {
    "node": ">=18.19.0",
    "pnpm": ">=9.1.0"
  },
  "scripts": {
    "test": "run-s test:*",
    "test:e2e": "nr build && nr --filter=./packages/* test:e2e",
    "test:unit": "vitest run --exclude '**/e2e*/**'",
    "test:unit:coverage": "vitest run --exclude '**/e2e*/**' --coverage",
    "lint": "eslint",
    "lintf": "eslint --fix",
    "up": "taze major -I",
    "api-test": "tsx scripts/api-test.ts",
    "commit": "tsx scripts/bump-version.ts && git-cz && git push",
    "prepare": "husky",
    "coveralls": "nr run test:coverage && coveralls < coverage/lcov.info",
    "changeset": "changeset",
    "changeset:alpha": "changeset pre enter alpha",
    "changeset:beta": "changeset pre enter beta",
    "changeset:pre.exit": "changeset pre exit",
    "changeset:version": "changeset version",
    "build": "nr --filter=./packages/* build",
    "release": "nr coveralls && nr build && changeset publish && nr --filter=alova-vscode-extension release"
  },
  "dependencies": {
    "@eslint/eslintrc": "catalog:",
    "globals": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@antfu/ni": "catalog:",
    "@changesets/changelog-github": "catalog:",
    "@changesets/cli": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@types/js-yaml": "catalog:",
    "@types/lodash": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "commitizen": "catalog:",
    "coveralls": "catalog:",
    "cz-conventional-changelog": "catalog:",
    "dts-bundle-generator": "catalog:",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "fast-glob": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:dev",
    "msw": "catalog:",
    "ncp": "catalog:",
    "npm-run-all2": "catalog:",
    "rimraf": "catalog:",
    "taze": "catalog:dev",
    "tslib": "catalog:",
    "tsx": "catalog:",
    "type-fest": "catalog:",
    "typescript": "catalog:dev",
    "vitest": "catalog:dev"
  },
  "resolutions": {
    "unplugin": "catalog:build",
    "vite": "catalog:build",
    "vite-plugin-inspect": "catalog:build"
  },
  "lint-staged": {
    "*": "npm run lintf"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
