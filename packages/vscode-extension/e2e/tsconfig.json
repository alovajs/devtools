{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["../dist/*"]
    },
    "strict": true,
    "outDir": "../e2e-out",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "../src/",
    "../dist/",
    "../ext/"
  ]
}
