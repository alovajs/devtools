{
  "name": "alova-vscode-extension",
  "displayName": "Alova",
  "description": "Generate and search APIs without API documentation any more",
  "version": "1.0.9",
  "private": true,
  "engines": {
    "vscode": "^1.89.0",
    "node": ">=18.19.0",
    "pnpm": ">=8.6.12"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:package.json",
    "onView:myTreeView"
  ],
  "main": "out/extension.js",
  "icon": "resources/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "alova.refresh",
        "category": "Alova",
        "title": "Generate APIs"
      },
      {
        "command": "alova.create.config",
        "category": "Alova",
        "title": "Create alova config"
      },
      {
        "command": "alova.apiDocs.refresh",
        "title": "Refresh View",
        "icon": "$(refresh)"
      },
      {
        "command": "alova.snippetSearch.open",
        "title": "打开代码片段搜索",
        "category": "Snippet Search"
      },
      {
        "command": "alova.snippetSearch.insert",
        "title": "插入代码片段",
        "category": "Snippet Search"
      },
      {
        "command": "alova.snippetSearch.showHelp",
        "title": "显示快捷键帮助",
        "category": "Snippet Search"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "alova.apiDocs.refresh",
          "group": "navigation",
          "when": "view == api-docs-server-view"
        }
      ],
      "view/item/context": [],
      "commandPalette": [
        {
          "command": "alova.snippetSearch.insert",
          "when": "editorTextFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "alova.snippetSearch.open",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus"
      }
    ],
    "icons": {
      "alova-icon-id": {
        "description": "alova icon",
        "default": {
          "fontPath": "./resources/logo.ttf",
          "fontCharacter": "\\E64B"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "api-docs-sidebar",
          "title": "Api docs",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "api-docs-sidebar": [
        {
          "id": "api-docs-server-view",
          "name": "Api Server",
          "type": "tree"
        },
        {
          "id": "api-docs-detail-view",
          "name": "Api Detail",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run check-types && tsx esbuild.ts --production",
    "compile": "pnpm run check-types && tsx esbuild.ts",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "tsx esbuild.ts --watch",
    "pretest": "tsc -p . --outDir out && tsx esbuild.ts",
    "watch-tests": "tsc -p . -w --outDir out",
    "check-types": "tsc --noEmit",
    "test": "vscode-test",
    "pack:pre": "vsce package --no-dependencies --pre-release",
    "release:pre": "vsce publish --no-dependencies --pre-release",
    "pack": "vsce package --no-dependencies",
    "release": "vsce publish --no-dependencies && ovsx publish --no-dependencies"
  },
  "publisher": "Alova",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alovajs/devtools.git"
  },
  "bugs": {
    "url": "https://github.com/alovajs/devtools/issues"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.89.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.29.0",
    "esbuild": "^0.24.0",
    "esbuild-plugin-alias": "^0.2.1",
    "ovsx": "^0.10.1",
    "sinon": "^19.0.2"
  },
  "dependencies": {
    "@alova/wormhole": "workspace:*",
    "glob": "^11.0.0",
    "import-fresh": "^3.3.0"
  }
}
