{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "outDir": "out",
    "strictNullChecks": true,
    "lib": ["ES2022"],
    "paths": {
      "~/*": ["./typings/*"],
      "@/*": ["./src/*"],
      "#/*": ["./*"]
    }
  },
  "exclude": ["design/**", "./node_modules", "test/**"],
  "include": ["src/**/*.ts", "*.*js", "*.*ts", "scripts/**.*", "typings/**/*.d.ts"]
}
