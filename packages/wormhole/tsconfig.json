{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "types": ["vitest/globals"],
    "paths": {
      "~/*": ["./typings/*"],
      "@/*": ["./src/*"],
      "#/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*", "./*.ts", "typings/**/*.d.ts", "./scripts/**/*", "vitest.config.mts"]
}
